void fncuadro(){
	int j=0;
	int k=0;
	int h=0;
		printf("Este programa te hara un cuadrado de nxn\n");
	printf("Introduce un numero n:");
	scanf("%d", &h);

		for(j=1; j<=h; j=j+1){
		if(j==1){
			for(k=1; k<=h; k=k+1){
				printf("+ ");
		}
	}
  	if(j>=2&&j<h){
				for(k=1; k<=h; k=k+1){
					if(k==1){
						
						printf("+ ");
					}
					if(k>=2&&k<h){
						printf("+ ");
					}
					if(k==h){
						printf("+ ");
					}
				}
			}
			if(j==h){
				for(k=1; k<=h; k=k+1){
					printf("+ ");
				}
			}
		printf("\n");
	}	
}
